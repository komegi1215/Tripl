<div class="container">
  <div class="form-container">
    <h2 style="text-align: center;"><i class="fa-solid fa-leaf" style="color: #f26419;"></i>  Sign in</h2>
    <p style="text-align: center; font-family: Google Sans,Roboto,Arial,sans-serif;">Not a user yet? <%= link_to "Sign up", new_user_registration_path, class: "user-tripl" %></p>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
          <p style="font-family: Google Sans,Roboto,Arial,sans-serif; text-align: right;"><%= link_to "Forgot password", new_user_password_path, class: "user-tripl" %></p>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: "btn btn-tripl" %>
      </div>
    <% end %>
  </div>
</div>
